<ContentPage />
<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="FindYourHome.Views.ProfilePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:FindYourHome.ViewModels">

    <ContentPage.BindingContext>
        <viewmodels:ProfileViewModel />
    </ContentPage.BindingContext>

    <VerticalStackLayout Padding="25" Spacing="20">

        <Label Text="Profil"
               FontSize="32"
               FontAttributes="Bold" />

        <Label Text="{Binding Nom}" FontSize="22" />
        <Label Text="{Binding Email}" />
        <Label Text="{Binding IsOwner, StringFormat='Propriétaire : {0}'}" />

        <Button Text="Se déconnecter"
                Command="{Binding LogoutCommand}"
                Style="{StaticResource DangerButton}" />

    </VerticalStackLayout>

</ContentPage>
