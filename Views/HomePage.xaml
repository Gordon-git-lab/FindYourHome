<ContentPage />
<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage 
    x:Class="FindYourHome.Views.HomePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:FindYourHome.ViewModels"
    BackgroundColor="White">

    <ContentPage.BindingContext>
        <viewmodels:HomeViewModel />
    </ContentPage.BindingContext>

    <CollectionView ItemsSource="{Binding Houses}"
                    SelectionMode="Single"
                    SelectionChanged="OnSelect">

        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame Padding="10" Margin="10"
                       BorderColor="#ccc" CornerRadius="10">

                    <VerticalStackLayout Spacing="10">

                        <Image Source="{Binding ImageUrl}"
                               HeightRequest="150"
                               Aspect="AspectFill" />

                        <Label Text="{Binding Title}"
                               FontAttributes="Bold"
                               FontSize="18" />

                        <Label Text="{Binding Emplacement}" />

                        <Label Text="{Binding Loyer, StringFormat='Loyer : {0} FCFA'}" />

                    </VerticalStackLayout>

                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>

    </CollectionView>
</ContentPage>
