<ContentPage />
<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="FindYourHome.Views.DetailsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:FindYourHome.ViewModels">

    <ContentPage.BindingContext>
        <viewmodels:DetailsViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">

            <Image Source="{Binding SelectedHouse.ImageUrl}"
                   Aspect="AspectFill"
                   HeightRequest="200" />

            <Label Text="{Binding SelectedHouse.Title}"
                   FontAttributes="Bold"
                   FontSize="22" />

            <Label Text="{Binding SelectedHouse.Emplacement}" />

            <Label Text="{Binding SelectedHouse.Loyer, StringFormat='{0} FCFA'}" />

            <Label Text="{Binding SelectedHouse.Description}" />

            <Button Text="{Binding SelectedHouse.IsFavorite, Converter={StaticResource BoolToFavoriteText}}"
                    Command="{Binding ToggleFavoriteCommand}"
                    Style="{StaticResource AccentButton}" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
