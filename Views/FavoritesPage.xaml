<ContentPage />
<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="FindYourHome.Views.FavoritesPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:FindYourHome.ViewModels">

    <ContentPage.BindingContext>
        <viewmodels:FavoritesViewModel />
    </ContentPage.BindingContext>

    <CollectionView ItemsSource="{Binding Favorites}" SelectionMode="Single"
                    SelectionChanged="OnSelect">

        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame Padding="10" Margin="10"
                       BorderColor="#ccc" CornerRadius="10">

                    <VerticalStackLayout Spacing="10">

                        <Image Source="{Binding ImageUrl}"
                               HeightRequest="150" />

                        <Label Text="{Binding Title}" 
                               FontAttributes="Bold" FontSize="18" />

                    </VerticalStackLayout>

                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>

    </CollectionView>

</ContentPage>
