<ContentPage />
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    x:Class="FindYourHome.Views.RegisterPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:FindYourHome.ViewModels"
    BackgroundColor="White">

    <ContentPage.BindingContext>
        <viewmodels:RegisterViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Spacing="15" Padding="25">

            <Label Text="Créer un compte"
                   FontSize="28"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <Entry Placeholder="Nom complet"
                   Text="{Binding Nom}" />

            <Entry Placeholder="Email"
                   Keyboard="Email"
                   Text="{Binding Email}" />

            <Entry Placeholder="Mot de passe"
                   IsPassword="True"
                   Text="{Binding Password}" />

            <CheckBox IsChecked="{Binding IsOwner}" />
            <Label Text="Je suis un propriétaire" />

            <Button Text="S'inscrire"
                    Command="{Binding RegisterCommand}"
                    Style="{StaticResource PrimaryButton}" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
