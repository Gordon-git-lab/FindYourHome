<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage 
    x:Class="FindYourHome.Views.AddHousePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:FindYourHome.ViewModels">

    <ContentPage.BindingContext>
        <viewmodels:AddHouseViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Entry Placeholder="Titre" Text="{Binding NewHouse.Title}" />

            <Entry Placeholder="Emplacement" Text="{Binding NewHouse.Emplacement}" />

            <Entry Placeholder="Loyer" Keyboard="Numeric" Text="{Binding NewHouse.Loyer}" />

            <Entry Placeholder="Nombre de piÃ¨ces" Keyboard="Numeric" Text="{Binding NewHouse.NbPieces}" />

            <Entry Placeholder="Image (nom du fichier)" Text="{Binding NewHouse.ImageUrl}" />

            <Editor Placeholder="Description" AutoSize="TextChanges"
                    Text="{Binding NewHouse.Description}" />

            <Button Text="Ajouter" 
                    Command="{Binding SaveCommand}"
                    Style="{StaticResource PrimaryButton}" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
